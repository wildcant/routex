generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  ACTIVE
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  role     Role   @default(USER)
  password String
  status   Status @default(PENDING)
}

model Company {
  id   Int    @id @default(autoincrement())
  name String @unique
  hash String @unique
}
